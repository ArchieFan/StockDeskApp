@model StockDesk.WebApp.ViewModels.StockManagementNewViewModel
@{
    ViewData["Title"] = "Register Stock";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

    <h3 id="PageTitle">Stock Management - register stock</h3>

    <form asp-controller="StockManagement" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Stock.Ticker"></label>
            <input asp-for="Stock.Ticker" type="text" class="form-control" />
            <span asp-validation-for="Stock.Ticker" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock.CompanyName"></label>
            <input asp-for="Stock.CompanyName" type="text" class="form-control" />
            <span asp-validation-for="Stock.CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock.Industry"></label>
            <input asp-for="Stock.Industry" type="text" class="form-control" />
            <span asp-validation-for="Stock.Industry" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock.MarketCap"></label>
            <input asp-for="Stock.MarketCap" type="text" class="form-control" />
            <span asp-validation-for="Stock.MarketCap" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock.OwnerId"></label>
            <select asp-for="SelectedClientId" asp-items="Model.Clients" class="form-control"></select>
            <span asp-validation-for="SelectedClientId" class="text-danger"></span>
        </div>
        <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
        <span><a id="CancelButton" asp-action="Index" asp-controller="StockManagement" class="btn btn-default">Cancel</a></span>
    </form>


